<Application
    x:Class="XlsxDiffTool.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:XlsxDiffTool"
    xmlns:shared="clr-namespace:XlsxDiffTool.Common"
    ThemeMode="System">
    <Application.Resources>
        <ResourceDictionary>
            <shared:ViewConverter x:Key="ViewConverter" />
            <shared:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <shared:WindowModeConverter x:Key="WindowModeConverter" />
            <shared:ColorToBrushConverter x:Key="ColorToBrushConverter" />
            <shared:InverseBoolConverter x:Key="InverseBoolConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
